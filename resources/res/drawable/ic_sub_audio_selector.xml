<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true" android:color="@color/vader_white"/>
    <item android:state_selected="false" android:color="@color/vader_white_80"/>
    <item android:state_focused="true" android:color="@color/vader_black">
        <shape android:shape="rectangle">
            <solid android:color="@color/vader_white"/>
            <corners android:radius="5dp"/>
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
</selector>
