<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="true">
        <set>
            <objectAnimator android:duration="@integer/duration2" android:valueTo="1.1" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="@integer/duration2" android:valueTo="1.1" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
    <item android:state_focused="false">
        <set>
            <objectAnimator android:duration="@integer/duration2" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="@integer/duration2" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
</selector>
